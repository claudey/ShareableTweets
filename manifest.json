{
  "name": "Gr8Twitter",
  "version": "1.0",
  "description": "Forces your browser to use old twitter.",
  "manifest_version": 2,
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.twitter.com/*",
    "browsingData",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "popup/info.html"
  },

  "icons": {"128": "128.png"},
  
  "content_scripts": [
      {
        "matches": ["*://*.twitter.com/*"],
        "js": ["content.js"],
        "run_at": "document_end",
        "css": ["bar.css"]
      }
 ],
 "web_accessible_resources": [
    "content.js"
  ]
}
